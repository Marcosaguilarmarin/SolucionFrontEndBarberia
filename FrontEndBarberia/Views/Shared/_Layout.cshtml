<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontEndBarberia</title>
    <script src="https://kit.fontawesome.com/76a80f734b.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
    <link rel="stylesheet" href="~/css/site.css " />
    <link rel="stylesheet" href="~/css/Styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Allan:wght@400;700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container mainfont HDimensions">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom mainfont">

            <div style="text-align-last: end;" class="">
                <h3>StyleMate</h3>
            </div>
            
            <div class="nav-wrapper">
                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0 HList navul navul-visible">
                    <li><a href="#" class="linkList">Inicio</a></li>
                    <li><a href="#" class="linkList">Servicios</a></li>
                    <li><a href="#" class="linkList">Perfil</a></li>
                    <li><a href="#" class="linkList">FAQs</a></li>
                </ul>
            </div>

            <div style="display:flex" class="">

                <button type="button" class="btn btn-outline-primary me-2 SecButtom">Login</button>
                <button type="button" class="btn btn-primary PrimButtom">Sign-up</button>
                <button class="toggleList" id="toggleListButton"><i class="fa-solid fa-bars"></i></button>
            </div>
           

        </header>
    </div>
    <div>
        <div style="max-width: 100%; padding: 0%;" class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FrontEndBarberia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
